        <Button
            android:id="@+id/button2"
            android:layout_width="227dp"
            android:layout_height="35dp"
            android:layout_alignParentTop="true"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="574dp"
            android:background="#b8c7e0"
            android:onClick="sendMessagemal"
            android:text="maltesea"
            android:textColor="@color/colorPrimary" />


        <ImageView
            android:id="@+id/imageView3"
            android:layout_width="317dp"
            android:layout_height="220dp"
            android:layout_alignParentTop="true"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="612dp"
            android:contentDescription="tesssst"
            app:srcCompat="@drawable/puga1" />


        <Button
            android:id="@+id/button3"
            android:layout_width="217dp"
            android:layout_height="35dp"
            android:layout_alignParentTop="true"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="839dp"
            android:background="#b8c7e0"
            android:onClick="sendMessagepug"
            android:text="pug"
            android:textColor="@color/colorPrimary" />

        <ImageView
            android:id="@+id/imageView4"
            android:layout_width="317dp"
            android:layout_height="220dp"
            android:layout_alignParentTop="true"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="877dp"
            android:contentDescription="tesssst"
            app:srcCompat="@drawable/cockerpaniela1" />


        <Button
            android:id="@+id/button4"
            android:layout_width="224dp"
            android:layout_height="35dp"
            android:layout_alignParentTop="true"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="1100dp"
            android:background="#b8c7e0"
            android:onClick="sendMessagecock"
            android:text="cocker spaniel"
            android:textColor="@color/colorPrimary" />


    </RelativeLayout>
</ScrollView>

