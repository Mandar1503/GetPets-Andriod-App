<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:background="@drawable/background1"
    android:layout_height="match_parent"
    tools:context=".CatActivity">

    <TextView
        android:id="@+id/textView18"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_marginStart="27dp"
        android:layout_marginTop="29dp"
        android:text="Select your Favorite cat here!"
        android:textColor="@color/colorAccent"
        android:textSize="25dp" />

    <android.support.v7.widget.CardView
        android:layout_width="322dp"
        android:layout_height="129dp"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="78dp">

        <ImageView
            android:id="@+id/imageView24"
            android:layout_width="513dp"
            android:layout_height="match_parent"
            app:srcCompat="@drawable/bcat" />

        <Button
            android:id="@+id/button6"
            android:layout_width="212dp"
            android:layout_height="match_parent"
            android:background="#FFF"
            android:onClick="sendMessagebcat"
            android:text="persian black cat" />
    </android.support.v7.widget.CardView>

    <android.support.v7.widget.CardView
        android:layout_width="321dp"
        android:layout_height="135dp"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="190dp">

        <ImageView
            android:id="@+id/imageView20"
            android:layout_width="515dp"
            android:layout_height="121dp"
            app:srcCompat="@drawable/scat" />

        <Button
            android:id="@+id/button7"
            android:layout_width="213dp"
            android:layout_height="match_parent"
            android:background="#FFF"
            android:onClick="sendMessagetcat"
            android:text="siamese kitten" />
    </android.support.v7.widget.CardView>

    <android.support.v7.widget.CardView
        android:layout_width="321dp"
        android:layout_height="128dp"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="26dp">

        <ImageView
            android:id="@+id/imageView23"
            android:layout_width="473dp"
            android:layout_height="wrap_content"
            app:srcCompat="@drawable/wcat" />

        <Button
            android:id="@+id/button8"
            android:layout_width="167dp"
            android:layout_height="match_parent"
            android:background="#FFF"
            android:onClick="sendMessagewcat"
            android:text="persian pure white kitten" />
    </android.support.v7.widget.CardView>

</RelativeLayout>