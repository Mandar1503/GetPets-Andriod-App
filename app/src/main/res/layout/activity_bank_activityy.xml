<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/background1"
    tools:context=".BankActivityy">

    <TextView
        android:id="@+id/textView38"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_marginStart="26dp"
        android:layout_marginTop="13dp"
        android:text="Enter your card details!"
        android:textColor="@color/colorPrimaryDark"
        android:textSize="30dp" />

    <EditText
        android:id="@+id/cardNumberEdit"
        android:layout_width="192dp"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/textView39"
        android:layout_alignParentEnd="true"
        android:layout_marginEnd="16dp"
        android:ems="10"
        android:hint="1234 4741 4578 5654"
        android:inputType="number"
        android:maxLength="16" />

    <TextView
        android:id="@+id/textView39"
        android:layout_width="110dp"
        android:layout_height="41dp"
        android:layout_alignParentTop="true"
        android:layout_alignStart="@+id/textView38"
        android:layout_marginTop="119dp"
        android:text="Card no:-"
        android:textColor="@color/colorPrimaryDark"
        android:textSize="24sp" />

    <TextView
        android:id="@+id/textView40"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_alignStart="@+id/textView38"
        android:layout_marginTop="249dp"
        android:text="Expiry Date:-"
        android:textColor="@color/colorPrimaryDark"
        android:textSize="24sp" />

    <EditText
        android:id="@+id/dateEdit"
        android:layout_width="85dp"
        android:layout_height="wrap_content"
        android:layout_alignBaseline="@+id/textView40"
        android:layout_alignStart="@+id/cardNumberEdit"
        android:ems="10"
        android:hint="12/22"
        android:inputType="number" />

    <TextView
        android:id="@+id/textView42"
        android:layout_width="120dp"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_alignStart="@+id/textView38"
        android:layout_marginBottom="205dp"
        android:text="CVV:-"
        android:textColor="@color/colorPrimaryDark"
        android:textSize="24sp" />

    <EditText
        android:id="@+id/cvvEdit"
        android:layout_width="140dp"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/textView42"
        android:layout_alignStart="@+id/cardNumberEdit"
        android:ems="10"
        android:hint="330"
        android:inputType="number" />

    <Button
        android:id="@+id/button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="116dp"
        android:onClick="saveCardDetails"
        android:text="buy"
        android:textColor="@color/colorPrimaryDark"
        android:textSize="18sp" />

    <TextView
        android:id="@+id/textView44"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_alignStart="@+id/textView38"
        android:layout_marginTop="191dp"
        android:text="Name:-"
        android:textColor="@color/colorPrimaryDark"
        android:textSize="24sp" />

    <EditText
        android:id="@+id/cardNameEdit"
        android:layout_width="199dp"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/textView44"
        android:layout_alignStart="@+id/cardNumberEdit"
        android:ems="10"
        android:hint="xyz"
        android:inputType="textPersonName" />

</RelativeLayout>